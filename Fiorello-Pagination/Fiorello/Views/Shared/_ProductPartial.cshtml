@using Fiorello.ViewModels.Product
@model ProductLoadMoreViewModel

@foreach (var product in Model.Products)
{
    <div class="mkdf-pli mkdf-item-space ">
        <div class="mkdf-pli-inner">
            <div class="mkdf-pli-image">
                @{
                    if (@product.StatusType.ToString() == "New")
                    {
                            <span class="mkdf-pli-new-product">New</span>
                    }
                    else if (@product.StatusType.ToString() == "Sale")
                    {
                            <span class="mkdf-pli-onsale">Sale</span>
                    }
                    else
                    {
                            <span class="mkdf-pli-out-of-stock">Sold</span>
                    }
                }
                <img width="620" height="800"
                 src="~/assets/img/@product.PhotoName"
                 class="attachment-woocommerce_single size-woocommerce_single wp-post-image"
                 alt="c" loading="eager"
                 srcset="~/assets/img/@product.PhotoName 620w,~/assets/img/@product.PhotoName 233w"
                 sizes="(max-width: 620px) 100vw, 620px" />
            </div>
            <a class="mkdf-pli-link" itemprop="url"
           asp-action="details" asp-controller="product" asp-route-id="@product.Id"
           title="@product.Name"></a>
        </div>
        <div class="mkdf-pli-text-wrapper">
            <h6 itemprop="name"
            class="entry-title mkdf-pli-title">
                <a asp-action="details" asp-controller="product" asp-route-id="@product.Id">
                    @product.Name
                </a>
            </h6>
            <div class="mkdf-pli-add-to-cart mkdf-default-skin">
                <a rel="nofollow"
               href="indexa528.html?add-to-cart=251"
               data-quantity="1" data-product_id="251"
               data-product_sku="989873"
               class="button add_to_cart_button ajax_add_to_cart mkdf-button">
                    Add
                    to cart
                </a>
            </div>
            <div class="mkdf-pli-price">
                <span class="woocommerce-Price-amount amount">
                    <span class="woocommerce-Price-currencySymbol">&#036;</span>259
                </span>
            </div>
        </div>
    </div>

}

@if (Model.IsLast)
{
    <script type="text/javascript">

        jQuery(document).ready((function ($) {
            function myFunc() {
                $("#loadMore").remove();
            }
            myFunc();
        }))

    </script>
}