@using Fiorello.Areas.Admin.ViewModels.HomeMainSlider;
@model HomeMainSliderDetailsViewModel
<div class="col-lg-12 grid-margin ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider Details</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>SubPhoto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Title</td>
                            <td>@Html.Raw(Model.Description)</td>
                            <td><img style="object-fit:cover;" src="~/assets/img/@Model.SubPhotoName" /></td>
                        </tr>
                    </tbody>
                </table>
                <br />
                <br />
                <h3>Slider Photos:</h3>
                <br />
                <div>
                    @foreach (var photo in Model.Photos)
                    {
                        <span style="margin-right:20px">@photo.Order</span>
                        <td ><img style="width:100px;height:100px; object-fit:cover" src="~/assets/img/@photo.Name" /></td>
                        <br />
                        <br />
                    }
                </div>
                <a asp-action="index" asp-controller="homemainslider" class="btn btn-info">Cancel</a>
            </div>
        </div>
    </div>
</div>