@using Fiorello.Areas.Admin.ViewModels.Blog
@model BlogIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="blog" asp-area="admin">Create Blog</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Photo</th>
                                        <th style="text-align:center">Title</th>
                                        <th>Description</th>
                                        <th>DateTime</th>
                                        <th colspan="2">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var blog in Model.Blogs)
                                    {
                                        <tr>
                                            <td>@blog.Id</td>
                                            <td><img style="width:60px; height:60px; object-fit:cover" src="~/assets/img/@blog.PhotoName" /></td>
                                            <td style="text-align:center;">@blog.Title</td>
                                            <td>@Html.Raw(blog.Description)</td>
                                            <td>@blog.CreateDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <a style="display:block; width:100px;" class="btn btn-primary" asp-action="update" asp-controller="blog" asp-area="admin" asp-route-id="@blog.Id">Update</a>
                                                <br>
                                                <a style="display:block; width:100px;" class="btn btn-danger" onclick="confirm('Are you sure?')" asp-action="delete" asp-controller="blog" asp-area="admin" asp-route-id="@blog.Id">Delete</a>
                                                <br>
                                                <a style="display:block; width:100px;" class="btn btn-info" asp-action="details" asp-controller="blog" asp-area="admin" asp-route-id="@blog.Id">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>