@using Fiorello.Areas.Admin.ViewModels.Product
@using Fiorello.Models;
@model ProductIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Product</h4>
                        <h5>Filter by:</h5>
                        <div class="filter-section">
                            <form method="get" asp-action="index" asp-controller="product">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="Name">Name</label>
                                            <input class="form-control" asp-for="Name" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="CategoryId">Category</label>
                                            <select class="form-control" asp-for="CategoryId" asp-items="Model.Categories">
                                                <option value="">Choose category</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="MinCost">MinCost</label>
                                            <input class="form-control" asp-for="MinCost" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="MaxCost">MaxCost</label>
                                            <input class="form-control" asp-for="MaxCost" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="MinQuantity"></label>
                                            <input class="form-control" asp-for="MinQuantity" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="MaxQuantity"></label>
                                            <input class="form-control" asp-for="MaxQuantity" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="CreatedAtStart"></label>
                                            <input type="date" class="form-control" asp-for="CreatedAtStart" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="CreatedAtEnd"></label>
                                            <input type="date" class="form-control" asp-for="CreatedAtEnd" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="StatusType">Status</label>
                                            <select asp-for="StatusType" asp-items="Html.GetEnumSelectList<Product.Status>()">
                                                <option value="">Choose status</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary me-2" style="margin-bottom:20px;">Submit</button>
                            </form>
                        </div>
                        <a class="btn btn-primary" asp-action="create" asp-controller="product" asp-area="admin">Create Product</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Category</th>
                                        <th>Cost</th>
                                        <th>Quantity</th>
                                        <th>Created At</th>
                                        <th>Status</th>
                                        <th colspan="3" style="text-align:center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td>@product.Id</td>
                                            <td>@product.Name</td>
                                            <td>@product.Category.Name</td>
                                            <td>@product.Cost</td>
                                            <td>@product.Quantity</td>
                                            <td>@product.CreatedAt.ToString("dd/mm/yyyy")</td>
                                            <td>@product.StatusType</td>
                                            <td width="20px">
                                                <a asp-action="update" asp-controller="product" asp-area="admin" asp-route-id="@product.Id" class="btn btn-primary">Update</a>
                                            </td>
                                            <td width="20px">
                                                <a asp-action="delete" asp-controller="product" asp-area="admin" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                                            </td>
                                            <td width="20px">
                                                <a asp-action="details" asp-controller="product" asp-area="admin" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © <a href="https://www.bootstrapdash.com/" target="_blank">bootstrapdash.com </a>2021</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Only the best <a href="https://www.bootstrapdash.com/" target="_blank"> Bootstrap dashboard  </a> templates</span>
        </div>
    </footer>
    <!-- partial -->
</div>