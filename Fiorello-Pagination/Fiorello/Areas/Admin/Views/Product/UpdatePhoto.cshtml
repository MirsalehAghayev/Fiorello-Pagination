@using Fiorello.Areas.Admin.ViewModels.ProductPhoto
@using Fiorello.Models
@model ProductPhotoUpdateViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Change Photo Order
                        </p>
                        <form method="post"  asp-action="updatephoto" asp-controller="product" asp-area="admin">
                            <div class="form-group">
                                <label asp-for="Order">Order</label>
                                <input class="form-control" asp-for="Order">
                                <span class="text-danger" asp-validation-for="Order"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>